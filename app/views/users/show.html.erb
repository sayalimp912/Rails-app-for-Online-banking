<div class="users_show">
  <h1>User Profile</h1>
  <%= link_to "Back to Users", users_path %>
  <div class="users_show__info-item">
    <label>Email</label>
    <div><%= @user.email %></div>
  </div>
  <% if current_user.id != @user.id %>
    <div class="users_show__info-item">
      <label>Private Transfers</label>
      <div class="users_show__personal-transfers">
        <%= render 'money_transfers/money_transfer_info' %>
      </div>
    </div>
  <% end %>

  <% if current_user.id == @user.id %>
    <h2>My Info</h2>
    <div class="users_show__info-item">
      <label>Balance</label>
      <div><%= @user.balance %></div>
    </div>
  <% end %>
</div>
