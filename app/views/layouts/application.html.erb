<!DOCTYPE html>
<html>
  <head>
    <title>ObiqShortTask</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if user_signed_in? %>
      <%= link_to("Logout (#{current_user.email})", destroy_user_session_path, method: :delete, class: 'link-right') %>
    <% else %>
      <%= link_to('Login', new_user_session_path, class: 'link-right')  %>
    <% end %>

    <%= yield %>
  </body>
</html>
